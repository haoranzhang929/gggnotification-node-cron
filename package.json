{
  "name": "cron-service",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Faraz Patankar",
  "main": "dist/index.js",
  "module": "dist/cron-service.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "dev": "dts watch --onSuccess 'node dist/index.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest --coverage && dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/cron-service.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cron-service.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/node-cron": "^3.0.4",
    "@types/node-telegram-bot-api": "^0.57.1",
    "dts-cli": "^1.6.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "size-limit": "^8.0.1",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "node-cron": "^3.0.2",
    "node-telegram-bot-api": "^0.59.0",
    "winston": "^3.8.2"
  }
}
