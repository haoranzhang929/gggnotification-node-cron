{
  "name": "cron-service",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Faraz Patankar",
  "main": "dist/index.js",
  "module": "dist/cron-service.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "dev": "dts watch --onSuccess 'node dist/index.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest --coverage && dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/cron-service.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cron-service.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tsconfig/recommended": "^1.0.10",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.10",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "size-limit": "^11.2.0",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.66.0",
    "winston": "^3.17.0"
  }
}
